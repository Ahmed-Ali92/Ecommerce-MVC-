@model List<CategoryDto>
<h1>Categories</h1>

<a class="btn btn-primary" asp-controller="Category" asp-action="Add">Add New Category</a>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Arabic</th>
            <th scope="col">English</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var Cat in Model){
        <tr>
            <td>@Cat.NameAR</td>
            <td>@Cat.NameEN</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Category" asp-action="Update" asp-route-id="@Cat.ID">Update</a>
                </td>
                <td><a class="btn btn-danger" asp-controller="Category" asp-action="CDelete" asp-route-id="@Cat.ID">Delete</a></td>
        </tr>
        }
    </tbody>
</table>