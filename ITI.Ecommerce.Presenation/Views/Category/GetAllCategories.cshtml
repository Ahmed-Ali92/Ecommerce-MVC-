@model List<CategoryDto>

@inject IViewLocalizer localizer

<h1>@localizer["Categories"]</h1>

@*<a class="btn btn-primary" asp-controller="Category" asp-action="Add">Add New Category</a>
*@<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">@localizer["Name Arabic"]</th>
            <th scope="col">@localizer["Name English"]</th>
            <th scope="col">@localizer["Update"]</th>
            <th scope="col">@localizer["Delete"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var Cat in Model){
        <tr>
            <td>@Cat.NameAR</td>
            <td>@Cat.NameEN</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Category" asp-action="Update" asp-route-id="@Cat.ID">@localizer["Update"]</a>
                </td>
                <td><a class="btn btn-danger" asp-controller="Category" asp-action="CDelete" asp-route-id="@Cat.ID">@localizer["Delete"]</a></td>
        </tr>
        }
    </tbody>
</table>