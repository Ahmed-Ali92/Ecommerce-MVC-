@using DTOs
@model CategoryDto
@{
    Layout="_Layout";
}
<h1>Add Category</h1>
<form method="post" asp-controller="Category" asp-action="Add" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="NameAR"></label>
        <input asp-for="NameAR" class="form-control" />
        <span asp-validation-for="NameAR" class="validation"></span>
    </div>
    <div class="form-group">
        <label asp-for="NameEN"></label>
        <input asp-for="NameEN" class="form-control" />
        <span asp-validation-for="NameEN" class="validation"></span>
    </div>
    
    <input type="submit" value="Add" class="btn btn-primary" />
    
</form>
