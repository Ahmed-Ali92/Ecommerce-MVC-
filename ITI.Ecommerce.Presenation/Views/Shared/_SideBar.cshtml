@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer localizer

@inject SignInManager<Customer> UserManager;

    @if (UserManager.IsSignedIn(User) == true)
{
    
    <div  class="sidebar pe-4 pb-3 ">
        <nav class="navbar bg-light navbar-light ">
                <a href="index.html" class="navbar-brand mx-4 mb-3">
                <h3 style="color:#0d6efd">B-TECH</h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">

                    <div class="ms-3">
                        <h6 class="mb-0">Admin</h6>
                    </div>
                </div>
            <div class="navbar-nav w-100">
                <div class="nav-item dropdown">
                @*User Option*@
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="bi bi-people-fill me-2"></i>@localizer["User"]</a>
                            <div class="dropdown-menu bg-transparent border-0">
                            <a asp-controller="User" asp-action="SignUp" class="nav-item nav-link"><i class="bi bi-person-plus-fill me-2"></i>@localizer["Add User"]</a>
                            <a asp-controller="Role" asp-action="Add" class="nav-item nav-link"><i class="bi bi-asterisk me-2"></i>@localizer["Add Role"]</a>
                    
                            </div>
                    </div>
      
                        @*Product Options*@
                        <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="bi bi-diagram-3-fill me-2"></i>@localizer["Product"]</a>
                            <div class="dropdown-menu bg-transparent border-0">
                            <a asp-controller="Product" asp-action="Add" class="nav-item nav-link"><i class="bi bi-plus-circle-fill me-2"></i>@localizer["Add New Product"]</a>
                                <a asp-controller="Product" asp-action="GetAll" class="nav-item nav-link"><i class="fa fa-chart-bar me-2"></i>@localizer["View All Products"]</a>
                                <a asp-controller="Product" asp-action="AddProductImages" class="nav-item nav-link"><i class="bi bi-image-fill me-2"></i>@localizer["Add New Images"]</a>
                            </div>
                        </div>
                    @*Customer Options*@
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="bi bi-person-check-fill me-2"></i>@localizer["Customer"]</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a class="nav-item nav-link" asp-controller="Customer" asp-action="GetAllUser"> <i class="fa fa-chart-bar me-2"></i>@localizer["View All Users"]</a>
                        </div>
                    </div>
                 </div>
             </div>
          </nav>
    </div>}


<!-- Sidebar End -->